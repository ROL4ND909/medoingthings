{#
 # Richtext
 # Full image
 #}

<div class="richtext-image__wrapper">
    <figure class="richtext-image__image">

    {% include 'utilities/picturefill' with {
       imageModel: block.image.image.first,
       imageSet: [
           ['richtextFullL', '1200px', '1.5x'],
           ['richtextFullM', '800px'],
           ['richtextFullS', '500px'],
           ['richtextFullM', 'noscript'],
           ['richtextFullL']
       ]
       }
     %}

    {% if block.caption is not empty %}
        <figcaption class="richtext-image__caption">
            {{ block.caption }}
        </figcaption>
    {% endif %}

    </figure>

</div>
